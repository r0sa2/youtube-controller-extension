{
	"name": "YouTube Controller",
	"description": "Enhances YouTube controls",
	"version": "1.0",
	"manifest_version": 3,

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "YouTube Controller"
	},

	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"css": ["jquery-ui.css"],
			"js": ["jquery.js", "jquery-ui.js", "content.js"],
			"run_at": "document_idle"
		}
	]
}